<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Tasks</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f8f9fa;
    }
    .container {
      margin-top: 50px;
    }
    .task-card {
      background-color: #fff;
      border: 1px solid #dee2e6;
      border-radius: 10px;
      padding: 15px;
      margin-bottom: 20px;
      box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
    .task-title {
      font-size: 1.25rem;
      font-weight: bold;
    }
    .task-actions a, .task-actions button {
      margin-right: 10px;
    }
    .btn-delete {
      color: #fff;
      background-color: #dc3545;
      border: none;
    }
    .btn-home {
      display: block;
      margin: 30px auto 0;
      width: fit-content;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="text-center mb-4">Tasks</h1>
    <div class="d-flex justify-content-between mb-4">
      <p class="text-muted">Manage your tasks efficiently</p>
      <a href="/tasks/create" class="btn btn-primary">Create New Task</a>
    </div>
      <div class="row">
        <% tasks.forEach(task => { %>
          <div class="col-md-6">
            <div class="task-card">
              <h3 class="task-title"><%= task.title %></h3>
              <p class="text-muted"><%= task.description %></p>
              <div class="task-actions">
                <a href="/tasks/<%= task._id %>" class="btn btn-outline-secondary btn-sm">View</a>
                <a href="/tasks/<%= task._id %>/edit" class="btn btn-outline-primary btn-sm">Edit</a>
                <form action="/api/tasks/<%= task._id %>?_method=DELETE" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-delete btn-sm">Delete</button>
                </form>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <a href="/home" class="btn btn-success btn-home">Back to Home</a>
  </div>
</body>
</html>
